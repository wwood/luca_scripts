echo `history |tail -n1` `date` >>~/command_finishes.txt

echo 'Subject: Your process has finished running.


The process "'`history |tail -n1 | cut -d ";" -f 1 | cut -c 8-`'" finished running on the server' $HOSTNAME 'with the exit status' $? 'at' `date` |ssmtp `email`
